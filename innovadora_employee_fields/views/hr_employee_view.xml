<odoo>
    <record id="hr_employee_view" model="ir.ui.view">
        <field name="name">hr.employee.view</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <field name="passport_id" position="after">
                <field name="nafss"/>
            </field>
            <field name="visa_no" position="before">
                <field name="contrato"/>
            </field>
            <field name="contrato" position="after">
                <field name="antiguedad"/>
            </field>
            <field name="children" position="after">
                <field name="discapacidad"/>
            </field>
            <field name="antiguedad" position="after">
                <field name="categoria"/>
            </field>
            <field name="categoria" position="after">
                <field name="ct"/>
            </field>
            <field name="ct" position="after">
                <field name="js"/>
            </field>
        </field>
    </record>
</odoo>
